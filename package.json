{
  "name": "nerimity-desktop",
  "version": "1.6.2",
  "description": "A modern and sleek chat app.",
  "main": "src/main.js",
  "type": "module",
  "repository": "https://github.com/Nerimity/nerimity-desktop",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch * --exec electron .",
    "publish-win": "electron-builder --win -p always",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "SupertigerDev <supertigerrrrr@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.0"
  },
  "build": {
    "appId": "nerimity.com",
    "productName": "Nerimity",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Network",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "**/*",
      "build/icon.ico",
      "build/icon.png",
      "build/notification_icon.ico",
      "build/notification_icon.png"
    ]
  },
  "dependencies": {
    "@nerimity/active-window-listener": "^2.0.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "node-abi": "^4.11.0",
    "node-global-key-listener": "^0.3.0",
    "portfinder": "^1.0.32",
    "ws": "^8.16.0"
  }
}
