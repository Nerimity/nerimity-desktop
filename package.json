{
  "name": "nerimity-desktop",
  "version": "2.0.2",
  "description": "A modern and sleek chat app.",
  "main": "src/main.js",
  "type": "module",
  "repository": "https://github.com/Nerimity/nerimity-desktop",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch * --exec electron .",
    "publish-win": "electron-builder --win -p always",
    "publish-mac": "electron-builder --mac -p always",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "SupertigerDev <supertigerrrrr@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  },
  "build": {
    "appId": "nerimity.com",
    "productName": "Nerimity",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon-512.png",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Network",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "**/*",
      "build/icon.ico",
      "build/icon.png",
      "build/icon-512.png",
      "build/notification_icon.ico",
      "build/notification_icon.png",
      "build/windows_overlay_notification.png",
      "build/windows_overlay_notification_1.png",
      "build/windows_overlay_notification_2.png",
      "build/windows_overlay_notification_3.png",
      "build/windows_overlay_notification_4.png",
      "build/windows_overlay_notification_5.png",
      "build/windows_overlay_notification_6.png",
      "build/windows_overlay_notification_7.png",
      "build/windows_overlay_notification_8.png",
      "build/windows_overlay_notification_9.png"
    ]
  },
  "dependencies": {
    "@nerimity/active-window-listener": "^2.0.6",
    "application-loopback": "^1.2.7",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "node-abi": "^3.78.0",
    "portfinder": "^1.0.38",
    "ws": "^8.18.3"
  }
}
